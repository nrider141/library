extends layout

.modal-header
  h3#modal-title.modal-title Add Borrowers
#modal-body.modal-body
  form
    .form-group
      label(for='ID') ID
      |  
      input.form-control(type='text', placeholder='ID', ng-model='$ctrl.borrower.ID')
    .form-group
      label(for='firstName') First Name
      |  
      input.form-control(type='text', placeholder='first name', ng-model='$ctrl.borrower.firstName')
    .form-group
      label(for='lastName') Last Name
      |  
      input.form-control(type='text', placeholder='last name', ng-model='$ctrl.borrower.lastName')
    .form-group
      label(for='email') Email
      |  
      input.form-control(type='text', placeholder='email', ng-model='$ctrl.borrower.email')
    .form-group
      label(for='phone') Phone
      |  
      input.form-control(type='text', placeholder='phone', ng-model='$ctrl.borrower.phone')
    .form-group
      label(for='address') Address
      |  
      input.form-control(type='text', placeholder='address', ng-model='$ctrl.borrower.address')
.modal-footer
  button.btn.btn-primary(type='button', ng-click='$ctrl.addBorrower()') OK
  |  
  button.btn.btn-warning(type='button', ng-click='$ctrl.cancel()') Cancel
